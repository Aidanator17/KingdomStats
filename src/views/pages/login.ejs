<div class="glass-auth-page">
  <div class="glass-card">
    <h1 class="glass-title">Welcome Back</h1>
    <form action="/auth/login" method="POST" class="glass-form">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" required />

      <label for="password">Password</label>
      <input type="password" id="password" name="password" required />

      <div class="glass-links">
        <a href="/forgot-password">Forgot Password?</a>
      </div>
      <% if (typeof error !=='undefined' && error) { %>
        <div class="glass-error">
          <%= error %>
        </div>
        <% } %>


          <button type="submit" class="glass-button">Login</button>
    </form>

    <div class="glass-footer">
      <span>Don't have an account?</span>
      <a href="/register">Sign Up</a>
    </div>
  </div>
</div>